{
	"name": "hmis-node-server",
	"version": "1.0.0",
	"main": "index.js",
	"repository": "https://github.com/m3rashid-org/hmis-node-server.git",
	"author": "m3rashid <m3rashid.hussain@gmail.com>",
	"license": "MIT",
	"type": "module",
	"bin": "./dist/index.js",
	"scripts": {
		"build": "yarn gyp && npx rollup -c",
		"dev": "npx rollup -c -w",
		"lint": "eslint --fix \"**/!(node_modules|dist)/*.{js,jsx,ts,tsx}\"",
		"start": "node ./dist/index.js",
		"prod": "docker compose -f docker-compose.yml -f docker-compose.prod.yml up -d",
		"format:check": "prettier --check .",
		"format:write": "prettier --write .",
		"lint:check": "eslint .",
		"lint:fix": "eslint --fix .",
		"precommit": "lint-staged",
		"prepare": "husky install",
		"gyp": "node-gyp configure && node-gyp build"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.332.0",
		"@faker-js/faker": "^7.6.0",
		"aws-sdk": "^2.1377.0",
		"axios": "^1.4.0",
		"bcrypt": "^5.1.0",
		"bull": "^4.10.4",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dayjs": "^1.11.7",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"helmet": "^6.1.4",
		"jsonwebtoken": "^9.0.0",
		"lodash-es": "^4.17.21",
		"mongoose": "^7.0.4",
		"mongoose-paginate-v2": "^1.7.1",
		"morgan": "^1.10.0",
		"multer": "^1.4.5-lts.1",
		"multer-s3": "^3.0.1",
		"node-cron": "^3.0.2",
		"nodemailer": "^6.9.2",
		"socket.io": "^4.6.1",
		"tslib": "^2.5.0",
		"winston": "^3.8.2",
		"xss-clean": "^0.1.1",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^24.0.1",
		"@rollup/plugin-run": "^3.0.1",
		"@rollup/plugin-terser": "^0.4.1",
		"@rollup/plugin-typescript": "^11.1.0",
		"@types/bcrypt": "^5.0.0",
		"@types/compression": "^1.7.2",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"@types/jsonwebtoken": "^9.0.1",
		"@types/lodash-es": "^4.17.7",
		"@types/morgan": "^1.9.4",
		"@types/multer": "^1.4.7",
		"@types/multer-s3": "^3.0.0",
		"@types/node": "^18.15.11",
		"@types/node-cron": "^3.0.7",
		"@types/nodemailer": "^6.4.7",
		"@typescript-eslint/eslint-plugin": "^5.43.0",
		"eslint": "^8.0.1",
		"eslint-config-standard-with-typescript": "^34.0.1",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-n": "^15.0.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-promise": "^6.0.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.1",
		"prettier": "^2.8.7",
		"rollup": "^3.20.2",
		"rollup-plugin-includepaths": "^0.2.4",
		"typescript": "*"
	},
	"lint-staged": {
		"*.{js,ts,tsx,d.ts}": [
			"eslint",
			"prettier --write"
		],
		"*.json": [
			"prettier --write"
		]
	}
}
