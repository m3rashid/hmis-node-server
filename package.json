{
	"name": "hmis-node-server",
	"version": "1.0.0",
	"main": "index.js",
	"repository": "https://github.com/m3rashid-org/hmis-node-server.git",
	"author": "m3rashid <m3rashid.hussain@gmail.com>",
	"license": "MIT",
	"type": "module",
	"bin": "./build/index.js",
	"scripts": {
		"build": "npx rollup -c",
		"dev": "npx rollup -c -w",
		"lint": "eslint --fix \"**/!(node_modules|build)/*.{js,jsx,ts,tsx}\"",
		"start": "node ./build/index.js",
		"format:check": "prettier --check .",
		"format:write": "prettier --write .",
		"lint:check": "eslint .",
		"lint:fix": "eslint --fix .",
		"precommit": "lint-staged",
		"prepare": "husky install"
	},
	"dependencies": {
		"@rollup/plugin-commonjs": "^24.0.1",
		"bcrypt": "^5.1.0",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"express-mongo-sanitize": "^2.2.0",
		"helmet": "^6.1.4",
		"jsonwebtoken": "^9.0.0",
		"lodash-es": "^4.17.21",
		"mongoose": "^7.0.3",
		"mongoose-field-encryption": "^6.0.0",
		"mongoose-paginate-v2": "^1.7.1",
		"morgan": "^1.10.0",
		"winston": "^3.8.2",
		"xss-clean": "^0.1.1",
		"yup": "^1.0.2",
		"yup-phone": "^1.3.2"
	},
	"devDependencies": {
		"@rollup/plugin-run": "^3.0.1",
		"@rollup/plugin-terser": "^0.4.1",
		"@rollup/plugin-typescript": "^11.1.0",
		"@types/bcrypt": "^5.0.0",
		"@types/compression": "^1.7.2",
		"@types/express": "^4.17.17",
		"@types/morgan": "^1.9.4",
		"@types/node": "^18.15.11",
		"@typescript-eslint/eslint-plugin": "^5.43.0",
		"eslint": "^8.0.1",
		"eslint-config-standard-with-typescript": "^34.0.1",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-n": "^15.0.0",
		"eslint-plugin-promise": "^6.0.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.1",
		"prettier": "^2.8.7",
		"rollup": "^3.20.2",
		"rollup-plugin-includepaths": "^0.2.4",
		"typescript": "*"
	},
	"lint-staged": {
		"*.{js,ts,tsx,d.ts}": [
			"eslint",
			"prettier --write"
		],
		"*.json": [
			"prettier --write"
		]
	}
}
